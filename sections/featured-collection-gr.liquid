<script>
  // Script para el cambio automático de imágenes
  document.addEventListener('DOMContentLoaded', function() {
    const productCards = document.querySelectorAll('.card');
    
    productCards.forEach(card => {
      const imageContainer = card.querySelector('.card__media');
      if (!imageContainer) return;
      
      const images = imageContainer.querySelectorAll('.motion-image');
      if (images.length <= 1) return;
      
      let currentIndex = 0;
      
      // Función para cambiar a la siguiente imagen
      function nextImage() {
        images[currentIndex].classList.add('hidden');
        currentIndex = (currentIndex + 1) % images.length;
        images[currentIndex].classList.remove('hidden');
      }
      
      // Iniciar el carrusel solo si hay más de una imagen y está activada la rotación
      if (images.length > 1 && imageContainer.dataset.enableRotation === 'true') {
        // Ocultar todas las imágenes excepto la primera
        for (let i = 1; i < images.length; i++) {
          images[i].classList.add('hidden');
        }
        
        // Cambiar imagen cada X segundos (configurable desde el panel)
        const interval = parseInt(imageContainer.dataset.interval) || 3000;
        setInterval(nextImage, interval);
      }
    });
  });
</script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Estilos para la rotación de imágenes */
  .card__media .motion-image {
    transition: opacity 0.3s ease;
  }

  .card__media .motion-image.hidden {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
  }

  /* Estilos para la imagen de hover */
  .card__media .hover-image {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.3s ease;
  }

  .card:hover .hover-image {
    opacity: 1;
  }

  .card:hover .main-image {
    opacity: 0;
  }

  /* Ajuste de espaciado entre productos */
  #Slider-{{ section.id }} .grid__item {
    padding: {{ section.settings.card_spacing }}px;
  }

  /* Estilos para las tarjetas */
  #Slider-{{ section.id }} .card {
    transition: transform {{ section.settings.animation_speed }}ms ease, 
                box-shadow {{ section.settings.animation_speed }}ms ease;
  }

  #Slider-{{ section.id }} .card:hover {
    transform: translateY(-{{ section.settings.card_hover_lift }}px);
    box-shadow: 0 {{ section.settings.card_shadow_intensity }}px {{ section.settings.card_shadow_intensity | times: 2 }}px rgba(0, 0, 0, 0.1);
  }

  /* Estilos de tipografía personalizados */
  #collection-{{ section.id }} .title {
    color: {{ section.settings.title_color }};
    font-family: {{ section.settings.title_font }}, sans-serif;
    font-weight: {{ section.settings.title_weight }};
    {% if section.settings.title_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif section.settings.title_transform == 'lowercase' %}
      text-transform: lowercase;
    {% elsif section.settings.title_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
  }

  #collection-{{ section.id }} .collection__description {
    color: {{ section.settings.description_color }};
    font-family: {{ section.settings.description_font }}, sans-serif;
    font-weight: {{ section.settings.description_weight }};
    {% if section.settings.description_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif section.settings.description_transform == 'lowercase' %}
      text-transform: lowercase;
    {% elsif section.settings.description_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
    letter-spacing: {{ section.settings.description_letter_spacing }}px;
  }

  /* Estilos para los títulos de productos */
  #Slider-{{ section.id }} .card__heading {
    color: {{ section.settings.product_title_color }};
    font-family: {{ section.settings.product_title_font }}, sans-serif;
    font-weight: {{ section.settings.product_title_weight }};
    {% if section.settings.product_title_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif section.settings.product_title_transform == 'lowercase' %}
      text-transform: lowercase;
    {% elsif section.settings.product_title_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
    letter-spacing: {{ section.settings.product_title_letter_spacing }}px;
  }

  /* Estilos para los precios */
  #Slider-{{ section.id }} .price {
    color: {{ section.settings.price_color }};
    font-family: {{ section.settings.price_font }}, sans-serif;
    font-weight: {{ section.settings.price_weight }};
  }

  /* Estilos para los botones */
  #collection-{{ section.id }} .button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    font-family: {{ section.settings.button_font }}, sans-serif;
    font-weight: {{ section.settings.button_weight }};
    {% if section.settings.button_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif section.settings.button_transform == 'lowercase' %}
      text-transform: lowercase;
    {% elsif section.settings.button_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
    letter-spacing: {{ section.settings.button_letter_spacing }}px;
    border-radius: {{ section.settings.button_radius }}px;
  }

  #collection-{{ section.id }} .button:hover {
    background-color: {{ section.settings.button_bg_hover_color }};
    color: {{ section.settings.button_text_hover_color }};
  }

  #collection-{{ section.id }} .button--secondary {
    background-color: {{ section.settings.secondary_button_bg_color }};
    color: {{ section.settings.secondary_button_text_color }};
  }

  #collection-{{ section.id }} .button--secondary:hover {
    background-color: {{ section.settings.secondary_button_bg_hover_color }};
    color: {{ section.settings.secondary_button_text_hover_color }};
  }
{%- endstyle -%}

{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
    assign more_in_collection = true
  endif

  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and products_to_display > section.settings.columns_desktop
    assign show_desktop_slider = true
  endif
-%}

