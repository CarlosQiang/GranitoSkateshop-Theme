<script>
  // Script para el cambio automático de imágenes
  document.addEventListener('DOMContentLoaded', function() {
    const productCards = document.querySelectorAll('.granito-product-card');
    
    productCards.forEach(card => {
      const imageContainer = card.querySelector('.granito-image-container');
      if (!imageContainer) return;
      
      const images = imageContainer.querySelectorAll('.granito-product-image');
      if (images.length <= 1) return;
      
      let currentIndex = 0;
      
      // Función para cambiar a la siguiente imagen
      function nextImage() {
        images[currentIndex].classList.add('hidden');
        currentIndex = (currentIndex + 1) % images.length;
        images[currentIndex].classList.remove('hidden');
      }
      
      // Iniciar el carrusel solo si hay más de una imagen
      if (images.length > 1) {
        // Ocultar todas las imágenes excepto la primera
        for (let i = 1; i < images.length; i++) {
          images[i].classList.add('hidden');
        }
        
        // Cambiar imagen cada X segundos (configurable desde el panel)
        const interval = parseInt(card.dataset.interval) || 3000;
        setInterval(nextImage, interval);
      }
    });
  });
</script>

{%- style -%}
  /* Estilos personalizados para GRANITO SKATEBOARDING */
  :root {
    --granito-gold: {{ section.settings.primary_color }};
    --granito-black: {{ section.settings.secondary_color }};
    --granito-white: {{ section.settings.background_color }};
    --granito-card-radius: {{ section.settings.card_radius }}px;
    --granito-card-shadow: {{ section.settings.card_shadow_intensity }}px {{ section.settings.card_shadow_intensity | times: 1.5 }}px {{ section.settings.card_shadow_intensity | times: 2 }}px rgba(0, 0, 0, 0.1);
    --granito-card-spacing: {{ section.settings.card_spacing }}px;
    --granito-animation-speed: {{ section.settings.animation_speed }}ms;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Estilos específicos de GRANITO */
  .granito-collection {
    background-color: var(--granito-white);
  }

  .granito-collection .title {
    color: var(--granito-black);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .granito-collection .collection__description {
    color: var(--granito-black);
  }

  .granito-collection .button {
    background-color: var(--granito-gold);
    color: var(--granito-black);
    font-weight: 600;
    border: none;
    transition: opacity var(--granito-animation-speed) ease;
  }

  .granito-collection .button:hover {
    opacity: 0.85;
    background-color: var(--granito-gold);
  }

  .granito-collection .button--secondary {
    background-color: var(--granito-black);
    color: var(--granito-white);
  }

  .granito-collection .button--secondary:hover {
    background-color: var(--granito-black);
    opacity: 0.85;
  }

  .granito-collection .slider-button {
    background-color: var(--granito-gold);
    color: var(--granito-black);
  }

  .granito-collection .slider-counter {
    color: var(--granito-black);
  }

  .granito-collection .price {
    color: var(--granito-black);
  }

  .granito-collection .price--on-sale .price__sale {
    color: var(--granito-gold);
  }

  /* Estilos mejorados para las tarjetas de producto */
  .granito-collection .grid__item {
    padding: var(--granito-card-spacing);
  }

  .granito-product-card {
    position: relative;
    border-radius: var(--granito-card-radius);
    box-shadow: var(--granito-card-shadow);
    overflow: hidden;
    transition: transform var(--granito-animation-speed) ease, 
                box-shadow var(--granito-animation-speed) ease;
    background-color: var(--granito-white);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .granito-product-card:hover {
    transform: translateY(-{{ section.settings.card_hover_lift }}px);
    box-shadow: 0 {{ section.settings.card_shadow_intensity | times: 2 }}px {{ section.settings.card_shadow_intensity | times: 3 }}px rgba(0, 0, 0, 0.15);
  }

  .granito-image-container {
    position: relative;
    overflow: hidden;
    padding-bottom: 100%; /* Relación de aspecto 1:1 por defecto */
  }

  .granito-image-container.portrait {
    padding-bottom: 125%; /* Relación de aspecto 4:5 */
  }

  .granito-image-container.adapt {
    padding-bottom: 0;
  }

  .granito-product-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity var(--granito-animation-speed) ease;
  }

  .granito-product-image.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .granito-product-image.hover-image {
    opacity: 0;
    pointer-events: none;
  }

  .granito-product-card:hover .granito-product-image.hover-image {
    opacity: 1;
  }

  .granito-product-card:hover .granito-product-image.main-image {
    opacity: 0;
  }

  .granito-product-info {
    padding: 15px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .granito-product-title {
    font-weight: 600;
    margin-bottom: 5px;
    color: var(--granito-black);
    transition: color var(--granito-animation-speed) ease;
  }

  .granito-product-card:hover .granito-product-title {
    color: var(--granito-gold);
  }

  .granito-product-price {
    font-weight: 700;
    margin-top: auto;
    color: var(--granito-black);
  }

  .granito-product-vendor {
    font-size: 0.85em;
    color: rgba(0, 0, 0, 0.6);
    margin-bottom: 8px;
  }

  /* Animación de entrada para las tarjetas */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .granito-collection .grid__item {
    animation: fadeInUp var(--granito-animation-speed) ease forwards;
    animation-delay: calc(var(--animation-order) * 100ms);
    opacity: 0;
  }

  /* Estilos para el botón de vista rápida */
  .granito-collection .quick-add__submit {
    background-color: var(--granito-gold);
    color: var(--granito-black);
    border-radius: var(--granito-card-radius);
    transition: background-color var(--granito-animation-speed) ease;
  }

  .granito-collection .quick-add__submit:hover {
    background-color: var(--granito-black);
    color: var(--granito-white);
  }

  /* Etiqueta de oferta */
  .granito-sale-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: var(--granito-gold);
    color: var(--granito-black);
    padding: 5px 10px;
    border-radius: var(--granito-card-radius);
    font-weight: 600;
    font-size: 0.85em;
    z-index: 2;
  }

  /* Etiqueta de agotado */
  .granito-sold-out-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: var(--granito-black);
    color: var(--granito-white);
    padding: 5px 10px;
    border-radius: var(--granito-card-radius);
    font-weight: 600;
    font-size: 0.85em;
    z-index: 2;
  }
{%- endstyle -%}

{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
    assign more_in_collection = true
  endif

  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and products_to_display > section.settings.columns_desktop
    assign show_desktop_slider = true
  endif
-%}

<div class="granito-collection">
  <div
    class="collection{% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %} section-{{ section.id }}-padding{% if section.settings.full_width %} collection--full-width{% endif %}"
    id="collection-{{ section.id }}"
    data-id="{{ section.id }}"
  >
    <div class="collection__title title-wrapper title-wrapper--no-top-margin page-width{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% endif %}{% if show_desktop_slider %} collection__title--desktop-slider{% endif %}">
      {%- if section.settings.title != blank -%}
        <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}
      {%- if section.settings.description != blank
        or section.settings.show_description
        and section.settings.collection.description != empty
      -%}
        <div class="collection__description {{ section.settings.description_style }} rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if section.settings.show_description -%}
            {{ section.settings.collection.description }}
          {%- else -%}
            {{ section.settings.description -}}
          {%- endif %}
        </div>
      {%- endif -%}
    </div>

    <slider-component class="slider-mobile-gutter{% if section.settings.full_width %} slider-component-full-width{% endif %}{% if show_mobile_slider == false %} page-width{% endif %}{% if show_desktop_slider == false and section.settings.full_width == false %} page-width-desktop{% endif %}{% if show_desktop_slider %} slider-component-desktop{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <ul
        id="Slider-{{ section.id }}"
        data-id="{{ section.id }}"
        class="grid product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ section.settings.columns_desktop }}-col-desktop{% if section.settings.collection == blank %} grid--2-col-tablet-down{% else %} grid--{{ section.settings.columns_mobile }}-col-tablet-down{% endif %}{% if show_mobile_slider or show_desktop_slider %} slider{% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %}"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- if section.settings.collection.products.size > 0 -%}
          {% paginate section.settings.collection.products by section.settings.products_to_show %}
            {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
              <li
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                class="grid__item{% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}"
                style="--animation-order: {{ forloop.index }};"
              >
                {% comment %} Tarjeta de producto personalizada GRANITO {% endcomment %}
                <div class="granito-product-card" data-interval="{{ section.settings.image_rotation_speed | times: 1000 }}">
                  {% if product.compare_at_price > product.price and section.settings.show_sale_badge %}
                    <div class="granito-sale-badge">{{ 'products.product.on_sale' | t }}</div>
                  {% endif %}
                  
                  {% if product.available == false and section.settings.show_sold_out_badge %}
                    <div class="granito-sold-out-badge">{{ 'products.product.sold_out' | t }}</div>
                  {% endif %}
                  
                  <a href="{{ product.url }}" class="granito-product-link">
                    <div class="granito-image-container {% if section.settings.image_ratio == 'portrait' %}portrait{% elsif section.settings.image_ratio == 'adapt' %}adapt{% endif %}">
                      {% if product.featured_image != blank %}
                        <img 
                          src="{{ product.featured_image | img_url: '500x' }}" 
                          alt="{{ product.featured_image.alt | escape }}"
                          class="granito-product-image main-image"
                          loading="lazy"
                          width="500"
                          height="500"
                        >
                      {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'granito-product-image main-image' }}
                      {% endif %}
                      
                      {% comment %} Imagen para hover si está configurada {% endcomment %}
                      {% if product.images.size > 1 and section.settings.show_hover_image %}
                        <img 
                          src="{{ product.images[1] | img_url: '500x' }}" 
                          alt="{{ product.images[1].alt | escape }}"
                          class="granito-product-image hover-image"
                          loading="lazy"
                          width="500"
                          height="500"
                        >
                      {% endif %}
                      
                      {% comment %} Imágenes adicionales para rotación automática {% endcomment %}
                      {% if section.settings.show_image_rotation and product.images.size > 1 %}
                        {% for image in product.images offset: 1 limit: section.settings.max_rotation_images %}
                          {% unless forloop.index == 1 and section.settings.show_hover_image %}
                            <img 
                              src="{{ image | img_url: '500x' }}" 
                              alt="{{ image.alt | escape }}"
                              class="granito-product-image hidden"
                              loading="lazy"
                              width="500"
                              height="500"
                            >
                          {% endunless %}
                        {% endfor %}
                      {% endif %}
                    </div>
                    
                    <div class="granito-product-info">
                      {% if section.settings.show_vendor and product.vendor != blank %}
                        <div class="granito-product-vendor">{{ product.vendor }}</div>
                      {% endif %}
                      
                      <h3 class="granito-product-title">{{ product.title }}</h3>
                      
                      <div class="granito-product-price">
                        {% if product.compare_at_price > product.price %}
                          <span class="granito-price-sale">{{ product.price | money }}</span>
                          <span class="granito-price-compare">{{ product.compare_at_price | money }}</span>
                        {% else %}
                          <span>{{ product.price | money }}</span>
                        {% endif %}
                      </div>
                      
                      {% if section.settings.show_rating and product.metafields.reviews.rating.value != blank %}
                        <div class="granito-product-rating">
                          {% assign rating_decimal = 0 %}
                          {% assign decimal = product.metafields.reviews.rating.value.rating | modulo: 1 %}
                          {% if decimal >= 0.3 and decimal <= 0.7 %}
                            {% assign rating_decimal = 0.5 %}
                          {% elsif decimal > 0.7 %}
                            {% assign rating_decimal = 1 %}
                          {% endif %}
                          <div class="rating" role="img" aria-label="{{ 'products.product.star_reviews_info' | t: rating_value: product.metafields.reviews.rating.value, rating_max: product.metafields.reviews.rating.value.scale_max }}">
                            {%- for i in (1..5) -%}
                              {%- assign rating_value = product.metafields.reviews.rating.value.rating | floor -%}
                              <span class="rating-star {% if i <= rating_value %}filled{% endif %} {% if i <= rating_value and decimal > 0 and i == rating_value %}half{% endif %}">★</span>
                            {%- endfor -%}
                          </div>
                          <p class="rating-text">
                            <span>{{ product.metafields.reviews.rating.value }} / {{ product.metafields.reviews.rating.value.scale_max }}</span>
                          </p>
                          <p class="rating-count">
                            <span>({{ product.metafields.reviews.rating_count.value }} {{ 'products.product.reviews' | t }})</span>
                          </p>
                        </div>
                      {% endif %}
                    </div>
                  </a>
                  
                  {% if section.settings.quick_add != 'none' %}
                    <div class="granito-quick-add">
                      {%- if product.variants.size == 1 -%}
                        <product-form>
                          <form method="post" action="{{ routes.cart_add_url }}" id="quick-add-{{ product.id }}" accept-charset="UTF-8" class="form" enctype="multipart/form-data" novalidate="novalidate">
                            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                            <button type="submit" name="add" class="granito-quick-add-button">
                              {{ 'products.product.add_to_cart' | t }}
                            </button>
                          </form>
                        </product-form>
                      {%- else -%}
                        <a href="{{ product.url }}" class="granito-view-product-button">
                          {{ 'products.product.view_details' | t }}
                        </a>
                      {%- endif -%}
                    </div>
                  {% endif %}
                </div>
              </li>
            {%- endfor -%}
          {% endpaginate %}
        {%- else -%}
          {%- for i in (1..section.settings.columns_desktop) -%}
            <li
              class="grid__item"
              style="--animation-order: {{ forloop.index }};"
            >
              {% liquid
                assign ridx = forloop.rindex
                case ridx
                  when 5
                    assign ridx = 1
                  when 6
                    assign ridx = 2
                endcase
              %}
              <div class="granito-product-card">
                <div class="granito-image-container">
                  {{ 'product-' | append: ridx | placeholder_svg_tag: 'granito-product-image main-image' }}
                </div>
                <div class="granito-product-info">
                  <h3 class="granito-product-title">{{ 'products.product.product_title' | t }}</h3>
                  <div class="granito-product-price">{{ '29.99' | money }}</div>
                </div>
              </div>
            </li>
          {%- endfor -%}
        {%- endif -%}
      </ul>
      {%- if show_mobile_slider or show_desktop_slider -%}
        <div class="slider-buttons">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ products_to_display }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>
      {%- endif -%}
    </slider-component>

    {%- if section.settings.show_view_all and more_in_collection -%}
      <div class="center collection__view-all">
        <a
          href="{{ section.settings.collection.url }}"
          class="{% if section.settings.view_all_style == 'link' %}link underlined-link{% elsif section.settings.view_all_style == 'solid' %}button{% else %}button button--secondary{% endif %}"
          aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title | escape }}"
        >
          {{ 'sections.featured_collection.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
    {% if section.settings.image_shape == 'arch' %}
      {{ 'mask-arch.svg' | inline_asset_content }}
    {%- endif -%}
  </div>
</div>

