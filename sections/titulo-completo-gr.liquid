</div>

{% if section.settings.enable_animation %}
<style>
.animate-titulo-completo {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity {{ section.settings.animation_duration | times: 0.1 }}s ease-out, transform {{ section.settings.animation_duration | times: 0.1 }}s ease-out;
}

.animate-titulo-completo.animated {
  opacity: 1;
  transform: translateY(0);
}

@media screen and (prefers-reduced-motion: reduce) {
  .animate-titulo-completo {
    opacity: 1;
    transform: translateY(0);
    transition: none;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tituloCompletoElement = document.querySelector('#TituloCompleto-{{ section.id }} .animate-titulo-completo');
  const animationDelay = parseInt(tituloCompletoElement.getAttribute('data-animation-delay'));
  
  function handleIntersection(entries, observer) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('animated');
        }, animationDelay);
        observer.unobserve(entry.target);
      }
    });
  }
  
  const observer = new IntersectionObserver(handleIntersection, {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  });
  
  observer.observe(tituloCompletoElement);
});
</script>
{% endif %}

