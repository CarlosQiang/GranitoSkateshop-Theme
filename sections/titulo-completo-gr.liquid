<div class="titulo-completo-gr-container {% if section.settings.full_width %}page-width{% endif %}" id="TituloCompleto-{{ section.id }}">
  <div class="titulo-completo-gr-wrapper"
       style="
         {% if section.settings.margin_top != blank %}margin-top: {{ section.settings.margin_top }}px;{% endif %}
         {% if section.settings.margin_bottom != blank %}margin-bottom: {{ section.settings.margin_bottom }}px;{% endif %}
         {% if section.settings.padding != blank %}padding: {{ section.settings.padding }}px;{% endif %}
         {% if section.settings.background_type == 'color' %}
           background-color: {{ section.settings.background_color }};
         {% elsif section.settings.background_type == 'gradient' %}
           background: linear-gradient(
             {{ section.settings.gradient_direction }}deg, 
             {{ section.settings.gradient_color_1 }} {{ section.settings.gradient_position_1 }}%, 
             {{ section.settings.gradient_color_2 }} {{ section.settings.gradient_position_2 }}%
           );
         {% endif %}
         border-radius: {{ section.settings.border_radius }}px;
         {% if section.settings.enable_shadow %}
           box-shadow: {{ section.settings.shadow_h_offset }}px {{ section.settings.shadow_v_offset }}px {{ section.settings.shadow_blur }}px {{ section.settings.shadow_spread }}px {{ section.settings.shadow_color }};
         {% endif %}
       "
       class="{% if section.settings.enable_animation %}animate-titulo-completo{% endif %}"
       data-animation-delay="{{ section.settings.animation_delay | times: 100 }}"
       data-animation-duration="{{ section.settings.animation_duration | times: 100 }}"
  >
    <!-- Título -->
    {% if section.settings.show_title %}
      <{{ section.settings.title_tag }} 
        class="titulo-completo-gr-title {% if section.settings.enable_title_text_shadow %}text-shadow{% endif %}"
        style="
          color: {{ section.settings.title_color }};
          font-size: {{ section.settings.title_font_size }}px;
          font-weight: {{ section.settings.title_font_weight }};
          {% if section.settings.title_font_family != 'inherit' %}font-family: {{ section.settings.title_font_family }};{% endif %}
          {% if section.settings.title_letter_spacing != blank %}letter-spacing: {{ section.settings.title_letter_spacing }}px;{% endif %}
          {% if section.settings.title_line_height != blank %}line-height: {{ section.settings.title_line_height }};{% endif %}
          {% if section.settings.title_text_transform != 'none' %}text-transform: {{ section.settings.title_text_transform }};{% endif %}
          {% if section.settings.enable_title_text_shadow %}
            text-shadow: {{ section.settings.title_shadow_h_offset }}px {{ section.settings.title_shadow_v_offset }}px {{ section.settings.title_shadow_blur }}px {{ section.settings.title_shadow_color }};
          {% endif %}
          {% if section.settings.title_text_decoration != 'none' %}text-decoration: {{ section.settings.title_text_decoration }};{% endif %}
          text-align: {{ section.settings.text_alignment }};
          margin-bottom: {{ section.settings.title_margin_bottom }}px;
        "
      >
        {% if section.settings.enable_title_gradient %}
          <span class="gradient-text" style="
            background: linear-gradient(
              {{ section.settings.title_gradient_direction }}deg, 
              {{ section.settings.title_gradient_color_1 }} {{ section.settings.title_gradient_position_1 }}%, 
              {{ section.settings.title_gradient_color_2 }} {{ section.settings.title_gradient_position_2 }}%
            );
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
          ">
            {{ section.settings.title }}
          </span>
        {% else %}
          {{ section.settings.title }}
        {% endif %}
      </{{ section.settings.title_tag }}>
    {% endif %}

    <!-- Subtítulo -->
    {% if section.settings.show_subtitle %}
      <{{ section.settings.subtitle_tag }} 
        class="titulo-completo-gr-subtitle {% if section.settings.enable_subtitle_text_shadow %}text-shadow{% endif %}"
