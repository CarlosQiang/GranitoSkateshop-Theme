<div class="info-spots-gr-container {% if section.settings.full_width %}page-width{% endif %}" id="InfoSpots-{{ section.id }}">
  <div class="info-spots-gr-wrapper"
       style="
         {% if section.settings.margin_top != blank %}margin-top: {{ section.settings.margin_top }}px;{% endif %}
         {% if section.settings.margin_bottom != blank %}margin-bottom: {{ section.settings.margin_bottom }}px;{% endif %}
         {% if section.settings.padding != blank %}padding: {{ section.settings.padding }}px;{% endif %}
         {% if section.settings.background_type == 'color' %}
           background-color: {{ section.settings.background_color }};
         {% elsif section.settings.background_type == 'gradient' %}
           background: linear-gradient(
             {{ section.settings.gradient_direction }}deg, 
             {{ section.settings.gradient_color_1 }} {{ section.settings.gradient_position_1 }}%, 
             {{ section.settings.gradient_color_2 }} {{ section.settings.gradient_position_2 }}%
           );
         {% endif %}
         border-radius: {{ section.settings.border_radius }}px;
         {% if section.settings.enable_shadow %}
           box-shadow: {{ section.settings.shadow_h_offset }}px {{ section.settings.shadow_v_offset }}px {{ section.settings.shadow_blur }}px {{ section.settings.shadow_spread }}px {{ section.settings.shadow_color }};
         {% endif %}
       "
  >
    <div class="info-spots-gr-content">
      <!-- Columna izquierda: Carrusel/Video -->
      <div class="info-spots-gr-media-column">
        {% if section.settings.media_type == 'video' and section.settings.video_url != blank %}
          <div class="info-spots-gr-video-container">
            <video 
              {% if section.settings.autoplay %}autoplay{% endif %} 
              {% if section.settings.loop %}loop{% endif %} 
              {% if section.settings.muted %}muted{% endif %} 
              {% if section.settings.controls %}controls{% endif %} 
              {% if section.settings.video_cover %}class="object-cover"{% endif %}
              playsinline
              id="spot-video-{{ section.id }}"
            >
              <source src="{{ section.settings.video_url }}" type="video/mp4">
              Tu navegador no soporta videos HTML5.
            </video>
          </div>
        {% elsif section.settings.media_type == 'carousel' and section.blocks.size > 0 %}
          <div class="info-spots-gr-carousel" id="SpotCarousel-{{ section.id }}">
            <div class="carousel-container">
              {% for block in section.blocks %}
                {% if block.type == 'slide' and block.settings.image != blank %}
                  <div class="carousel-slide {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
                    {% if forloop.first %}
                      {{ block.settings.image | image_url: width: 1200 | image_tag: 
                        loading: 'eager', 
                        class: 'carousel-image', 
                        alt: block.settings.image.alt | default: section.settings.spot_name 
                      }}
                    {% else %}
                      {{ block.settings.image | image_url: width: 1200 | image_tag: 
                        loading: 'lazy', 
                        class: 'carousel-image', 
                        alt: block.settings.image.alt | default: section.settings.spot_name 
                      }}
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            
            {% if section.settings.show_carousel_indicators and section.blocks.size > 1 %}
              <div class="carousel-indicators">
                {% for block in section.blocks %}
                  {% if block.type == 'slide' and block.settings.image != blank %}
                    <button class="carousel-indicator {% if forloop.first %}active{% endif %}" data-slide-to="{{ forloop.index0 }}" aria-label="Slide {{ forloop.index }}"></button>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
            
            {% if section.settings.show_carousel_controls and section.blocks.size > 1 %}
              <button class="carousel-control carousel-control-prev" aria-label="Anterior">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>
              <button class="carousel-control carousel-control-next" aria-label="Siguiente">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            {% endif %}
          </div>
        {% elsif section.settings.fallback_image != blank %}
          <div class="info-spots-gr-image-container">
            {{ section.settings.fallback_image | image_url: width: 1200 | image_tag: 
              loading: 'eager', 
              class: 'info-spots-gr-image', 
              alt: section.settings.fallback_image.alt | default: section.settings.spot_name 
            }}
          </div>
        {% else %}
          <div class="info-spots-gr-placeholder">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            <p>Añade imágenes o un video</p>
          </div>
        {% endif %}
      </div>
      
      <!-- Columna derecha: Información y mapa -->
      <div class="info-spots-gr-info-column">
        <div class="info-spots-gr-info-content">
          {% if section.settings.show_spot_name %}
            <{{ section.settings.spot_name_tag }} 
              class="info-spots-gr-title {% if section.settings.enable_title_text_shadow %}text-shadow{% endif %}"
              style="
                color: {{ section.settings.title_color }};
                font-size: {{ section.settings.title_font_size }}px;
                font-weight: {{ section.settings.title_font_weight }};
                {% if section.settings.title_font_family != 'inherit' %}font-family: {{ section.settings.title_font_family }};{% endif %}
                {% if section.settings.title_letter_spacing != blank %}letter-spacing: {{ section.settings.title_letter_spacing }}px;{% endif %}
                {% if section.settings.title_line_height != blank %}line-height: {{ section.settings.title_line_height }};{% endif %}
                {% if section.settings.title_text_transform != 'none' %}text-transform: {{ section.settings.title_text_transform }};{% endif %}
                {% if section.settings.enable_title_text_shadow %}
                  text-shadow: {{ section.settings.title_shadow_h_offset }}px {{ section.settings.title_shadow_v_offset }}px {{ section.settings.title_shadow_blur }}px {{ section.settings.title_shadow_color }};
                {% endif %}
                {% if section.settings.title_text_decoration != 'none' %}text-decoration: {{ section.settings.title_text_decoration }};{% endif %}
                margin-bottom: {{ section.settings.title_margin_bottom }}px;
              "
            >
              {% if section.settings.enable_title_gradient %}
                <span class="gradient-text" style="
                  background: linear-gradient(
                    {{ section.settings.title_gradient_direction }}deg, 
                    {{ section.settings.title_gradient_color_1 }} {{ section.settings.title_gradient_position_1 }}%, 
                    {{ section.settings.title_gradient_color_2 }} {{ section.settings.title_gradient_position_2 }}%
                  );
                  -webkit-background-clip: text;
                  -webkit-text-fill-color: transparent;
                  background-clip: text;
                  text-fill-color: transparent;
                ">
                  {{ section.settings.spot_name }}
                </span>
              {% else %}
                {{ section.settings.spot_name }}
              {% endif %}
            </{{ section.settings.spot_name_tag }}>
          {% endif %}

          {% if section.settings.show_subtitle and section.settings.subtitle != blank %}
            <{{ section.settings.subtitle_tag }} 
              class="info-spots-gr-subtitle {% if section.settings.enable_subtitle_text_shadow %}text-shadow{% endif %}"
              style="
                color: {{ section.settings.subtitle_color }};
                font-size: {{ section.settings.subtitle_font_size }}px;
                font-weight: {{ section.settings.subtitle_font_weight }};
                {% if section.settings.subtitle_font_family != 'inherit' %}font-family: {{ section.settings.subtitle_font_family }};{% endif %}
                {% if section.settings.subtitle_letter_spacing != blank %}letter-spacing: {{ section.settings.subtitle_letter_spacing }}px;{% endif %}
                {% if section.settings.subtitle_line_height != blank %}line-height: {{ section.settings.subtitle_line_height }};{% endif %}
                {% if section.settings.subtitle_text_transform != 'none' %}text-transform: {{ section.settings.subtitle_text_transform }};{% endif %}
                {% if section.settings.enable_subtitle_text_shadow %}
                  text-shadow: {{ section.settings.subtitle_shadow_h_offset }}px {{ section.settings.subtitle_shadow_v_offset }}px {{ section.settings.subtitle_shadow_blur }}px {{ section.settings.subtitle_shadow_color }};
                {% endif %}
                {% if section.settings.subtitle_text_decoration != 'none' %}text-decoration: {{ section.settings.subtitle_text_decoration }};{% endif %}
                margin-bottom: {{ section.settings.subtitle_margin_bottom }}px;
              "
            >
              {% if section.settings.enable_subtitle_gradient %}
                <span class="gradient-text" style="
                  background: linear-gradient(
                    {{ section.settings.subtitle_gradient_direction }}deg, 
                    {{ section.settings.subtitle_gradient_color_1 }} {{ section.settings.subtitle_gradient_position_1 }}%, 
                    {{ section.settings.subtitle_gradient_color_2 }} {{ section.settings.subtitle_gradient_position_2 }}%
                  );
                  -webkit-background-clip: text;
                  -webkit-text-fill-color: transparent;
                  background-clip: text;
                  text-fill-color: transparent;
                ">
                  {{ section.settings.subtitle }}
                </span>
              {% else %}
                {{ section.settings.subtitle }}
              {% endif %}
            </{{ section.settings.subtitle_tag }}>
          {% endif %}

          {% if section.settings.show_description %}
            <div 
              class="info-spots-gr-description {% if section.settings.enable_description_text_shadow %}text-shadow{% endif %}"
              style="
                color: {{ section.settings.description_color }};
                font-size: {{ section.settings.description_font_size }}px;
                font-weight: {{ section.settings.description_font_weight }};
                {% if section.settings.description_font_family != 'inherit' %}font-family: {{ section.settings.description_font_family }};{% endif %}
                {% if section.settings.description_letter_spacing != blank %}letter-spacing: {{ section.settings.description_letter_spacing }}px;{% endif %}
                {% if section.settings.description_line_height != blank %}line-height: {{ section.settings.description_line_height }};{% endif %}
                {% if section.settings.description_text_transform != 'none' %}text-transform: {{ section.settings.description_text_transform }};{% endif %}
                {% if section.settings.enable_description_text_shadow %}
                  text-shadow: {{ section.settings.description_shadow_h_offset }}px {{ section.settings.description_shadow_v_offset }}px {{ section.settings.description_shadow_blur }}px {{ section.settings.description_shadow_color }};
                {% endif %}
                {% if section.settings.description_text_decoration != 'none' %}text-decoration: {{ section.settings.description_text_decoration }};{% endif %}
                margin-bottom: {{ section.settings.description_margin_bottom }}px;
              "
            >
              {% if section.settings.enable_richtext %}
                <div class="rte">
                  {{ section.settings.description_richtext }}
                </div>
              {% else %}
                <p>{{ section.settings.description }}</p>
              {% endif %}
            </div>
          {% endif %}

          {% if section.settings.show_location_label %}
            <div class="info-spots-gr-location-label"
                 style="
                   color: {{ section.settings.location_label_color }};
                   font-size: {{ section.settings.location_label_font_size }}px;
                   font-weight: {{ section.settings.location_label_font_weight }};
                   margin-bottom: {{ section.settings.location_label_margin_bottom }}px;
                 "
            >
              {{ section.settings.location_label }}
            </div>
          {% endif %}

          {% if section.settings.show_location_name %}
            <{{ section.settings.location_name_tag }} 
              class="info-spots-gr-location-name {% if section.settings.enable_location_name_text_shadow %}text-shadow{% endif %}"
              style="
                color: {{ section.settings.location_name_color }};
                font-size: {{ section.settings.location_name_font_size }}px;
                font-weight: {{ section.settings.location_name_font_weight }};
                {% if section.settings.location_name_font_family != 'inherit' %}font-family: {{ section.settings.location_name_font_family }};{% endif %}
                {% if section.settings.location_name_letter_spacing != blank %}letter-spacing: {{ section.settings.location_name_letter_spacing }}px;{% endif %}
                {% if section.settings.location_name_line_height != blank %}line-height: {{ section.settings.location_name_line_height }};{% endif %}
                {% if section.settings.location_name_text_transform != 'none' %}text-transform: {{ section.settings.location_name_text_transform }};{% endif %}
                {% if section.settings.enable_location_name_text_shadow %}
                  text-shadow: {{ section.settings.location_name_shadow_h_offset }}px {{ section.settings.location_name_shadow_v_offset }}px {{ section.settings.location_name_shadow_blur }}px {{ section.settings.location_name_shadow_color }};
                {% endif %}
                {% if section.settings.location_name_text_decoration != 'none' %}text-decoration: {{ section.settings.location_name_text_decoration }};{% endif %}
                margin-bottom: {{ section.settings.location_name_margin_bottom }}px;
              "
            >
              {% if section.settings.enable_location_name_gradient %}
                <span class="gradient-text" style="
                  background: linear-gradient(
                    {{ section.settings.location_name_gradient_direction }}deg, 
                    {{ section.settings.location_name_gradient_color_1 }} {{ section.settings.location_name_gradient_position_1 }}%, 
                    {{ section.settings.location_name_gradient_color_2 }} {{ section.settings.location_name_gradient_position_2 }}%
                  );
                  -webkit-background-clip: text;
                  -webkit-text-fill-color: transparent;
                  background-clip: text;
                  text-fill-color: transparent;
                ">
                  {{ section.settings.location_name }}
                </span>
              {% else %}
                {{ section.settings.location_name }}
              {% endif %}
            </{{ section.settings.location_name_tag }}>
          {% endif %}

          {% if section.settings.show_map and section.settings.map_embed != blank %}
            <div class="info-spots-gr-map-container"
                 style="
                   margin-top: {{ section.settings.map_margin_top }}px;
                   margin-bottom: {{ section.settings.map_margin_bottom }}px;
                   border-radius: {{ section.settings.map_border_radius }}px;
                   overflow: hidden;
                   max-height: {{ section.settings.map_max_height }}px;
                   {% if section.settings.enable_map_shadow %}
                     box-shadow: {{ section.settings.map_shadow_h_offset }}px {{ section.settings.map_shadow_v_offset }}px {{ section.settings.map_shadow_blur }}px {{ section.settings.map_shadow_spread }}px {{ section.settings.map_shadow_color }};
                   {% endif %}
                 "
            >
              <div class="info-spots-gr-map">
                {{ section.settings.map_embed }}
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.info-spots-gr-container {
  width: 100%;
  max-width: 100%;
}

.info-spots-gr-wrapper {
  width: 100%;
}

.info-spots-gr-content {
  display: grid;
  grid-template-columns: 1fr;
  gap: {{ section.settings.columns_gap }}px;
}

@media screen and (min-width: 768px) {
  .info-spots-gr-content {
    grid-template-columns: {{ section.settings.left_column_width }}% {{ section.settings.right_column_width }}%;
  }
}

.info-spots-gr-media-column,
.info-spots-gr-info-column {
  width: 100%;
}

.info-spots-gr-video-container,
.info-spots-gr-image-container,
.info-spots-gr-carousel,
.info-spots-gr-placeholder {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: {{ section.settings.media_aspect_ratio }}%;
  overflow: hidden;
  border-radius: {{ section.settings.media_border_radius }}px;
  {% if section.settings.enable_media_shadow %}
    box-shadow: {{ section.settings.media_shadow_h_offset }}px {{ section.settings.media_shadow_v_offset }}px {{ section.settings.media_shadow_blur }}px {{ section.settings.media_shadow_spread }}px {{ section.settings.media_shadow_color }};
  {% endif %}
}

.info-spots-gr-video-container video,
.info-spots-gr-image-container img,
.info-spots-gr-placeholder svg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  {% if section.settings.video_cover %}
    object-fit: cover;
  {% else %}
    object-fit: contain;
  {% endif %}
}

.info-spots-gr-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f4f4f4;
  color: #888;
}

.info-spots-gr-placeholder svg {
  position: static;
  width: 50%;
  height: auto;
  margin-bottom: 1rem;
}

/* Estilos del carrusel */
.carousel-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.carousel-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.5s ease;
}

.carousel-slide.active {
  opacity: 1;
  z-index: 1;
}

.carousel-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.carousel-indicators {
  position: absolute;
  bottom: 15px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 8px;
  z-index: 2;
}

.carousel-indicator {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  border: none;
  padding: 0;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.carousel-indicator.active {
  background-color: #ffffff;
  transform: scale(1.2);
}

.carousel-control {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.3);
  color: #ffffff;
  border: none;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 2;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.carousel-control:hover {
  background-color: rgba(0, 0, 0, 0.5);
}

.carousel-control-prev {
  left: 15px;
}

.carousel-control-next {
  right: 15px;
}

/* Estilos de la columna de información */
.info-spots-gr-info-column {
  display: flex;
  flex-direction: column;
}

.info-spots-gr-info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* Estilos del mapa */
.info-spots-gr-map-container {
  width: 100%;
  position: relative;
  max-height: {{ section.settings.map_max_height }}px;
}

.info-spots-gr-map {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: {{ section.settings.map_aspect_ratio }}%;
  overflow: hidden;
  max-height: {{ section.settings.map_max_height }}px;
}

.info-spots-gr-map iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 0;
  max-height: {{ section.settings.map_max_height }}px;
}

/* Estilos para textos con degradado */
.gradient-text {
  display: inline-block;
}

/* Estilos para sombras de texto */
.text-shadow {
  /* Las sombras se aplican inline */
}

/* Estilos responsivos */
@media screen and (max-width: 767px) {
  .info-spots-gr-content {
    gap: {{ section.settings.columns_gap_mobile }}px;
  }
  
  .info-spots-gr-media-column {
    margin-bottom: {{ section.settings.columns_gap_mobile }}px;
  }
  
  .carousel-control {
    width: 30px;
    height: 30px;
  }
  
  .carousel-indicator {
    width: 8px;
    height: 8px;
  }
  
  .info-spots-gr-map-container,
  .info-spots-gr-map,
  .info-spots-gr-map iframe {
    max-height: {{ section.settings.map_max_height_mobile | default: section.settings.map_max_height }}px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Inicializar carrusel si existe
  const carousel = document.getElementById('SpotCarousel-{{ section.id }}');
  if (carousel) {
    initCarousel(carousel);
  }
  
  // Ajustar iframe de mapa si existe
  const mapContainer = document.querySelector('.info-spots-gr-map');
  if (mapContainer) {
    const iframe = mapContainer.querySelector('iframe');
    if (iframe) {
      iframe.style.width = '100%';
      iframe.style.height = '100%';
      iframe.style.position = 'absolute';
      iframe.style.top = '0';
      iframe.style.left = '0';
      iframe.style.border = '0';
      iframe.style.maxHeight = '{{ section.settings.map_max_height }}px';
    }
  }
});

function initCarousel(carousel) {
  const slides = carousel.querySelectorAll('.carousel-slide');
  const indicators = carousel.querySelectorAll('.carousel-indicator');
  const prevButton = carousel.querySelector('.carousel-control-prev');
  const nextButton = carousel.querySelector('.carousel-control-next');
  
  if (slides.length <= 1) return;
  
  let currentSlide = 0;
  let slideInterval;
  const intervalTime = {{ section.settings.carousel_speed | times: 1000 }};
  
  // Función para mostrar un slide específico
  function showSlide(index) {
    // Ocultar todos los slides
    slides.forEach(slide => {
      slide.classList.remove('active');
    });
    
    // Desactivar todos los indicadores
    indicators.forEach(indicator => {
      indicator.classList.remove('active');
    });
    
    // Mostrar el slide actual
    currentSlide = index;
    if (currentSlide >= slides.length) currentSlide = 0;
    if (currentSlide < 0) currentSlide = slides.length - 1;
    
    slides[currentSlide].classList.add('active');
    
    // Activar el indicador correspondiente
    if (indicators.length > 0 && indicators[currentSlide]) {
      indicators[currentSlide].classList.add('active');
    }
  }
  
  // Función para avanzar al siguiente slide
  function nextSlide() {
    showSlide(currentSlide + 1);
  }
  
  // Función para retroceder al slide anterior
  function prevSlide() {
    showSlide(currentSlide - 1);
  }
  
  // Iniciar el carrusel automático
  function startCarousel() {
    if (slides.length > 1 && {{ section.settings.carousel_autoplay }}) {
      slideInterval = setInterval(nextSlide, intervalTime);
    }
  }
  
  // Detener el carrusel automático
  function stopCarousel() {
    clearInterval(slideInterval);
  }
  
  // Eventos para los controles del carrusel
  if (prevButton) {
    prevButton.addEventListener('click', function() {
      prevSlide();
      stopCarousel();
      startCarousel();
    });
  }
  
  if (nextButton) {
    nextButton.addEventListener('click', function() {
      nextSlide();
      stopCarousel();
      startCarousel();
    });
  }
  
  // Eventos para los indicadores
  indicators.forEach((indicator, index) => {
    indicator.addEventListener('click', function() {
      showSlide(index);
      stopCarousel();
      startCarousel();
    });
  });
  
  // Pausar el carrusel al pasar el ratón por encima
  carousel.addEventListener('mouseenter', stopCarousel);
  carousel.addEventListener('mouseleave', startCarousel);
  
  // Soporte para gestos táctiles
  let touchStartX = 0;
  let touchEndX = 0;
  
  carousel.addEventListener('touchstart', function(e) {
    touchStartX = e.changedTouches[0].screenX;
  }, { passive: true });
  
  carousel.addEventListener('touchend', function(e) {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  }, { passive: true });
  
  function handleSwipe() {
    const swipeThreshold = 50;
    if (touchEndX < touchStartX - swipeThreshold) {
      // Deslizar a la izquierda (siguiente)
      nextSlide();
    } else if (touchEndX > touchStartX + swipeThreshold) {
      // Deslizar a la derecha (anterior)
      prevSlide();
    }
    stopCarousel();
    startCarousel();
  }
  
  // Iniciar el carrusel
  startCarousel();
}
</script>
{% schema %}
{
  "name": "Info Spots GR",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Diseño general"
