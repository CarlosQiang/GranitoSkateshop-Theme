{{ 'section-contact-form-gr.css' | asset_url | stylesheet_tag }}
{{ 'contact-form-gr-animations.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .contact-gr {
    {% if section.settings.custom_background_color != blank %}
      background-color: {{ section.settings.custom_background_color }};
    {% endif %}
    {% if section.settings.custom_text_color != blank %}
      color: {{ section.settings.custom_text_color }};
    {% endif %}
    {% if section.settings.rounded_corners %}
      border-radius: {{ section.settings.corner_radius }}px;
    {% endif %}
    {% if section.settings.add_shadow %}
      box-shadow: 0 {{ section.settings.shadow_vertical }}px {{ section.settings.shadow_blur }}px rgba(0, 0, 0, {{ section.settings.shadow_opacity }});
    {% endif %}
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="contact-gr page-width page-width--narrow section-{{ section.id }}-padding {% if section.settings.form_style %}contact-gr--{{ section.settings.form_style }}{% endif %} {% if section.settings.enable_animation %}contact-gr--animated{% endif %}">
    {%- if section.settings.show_form_steps and section.blocks.size > 0 -%}
      <div class="contact-gr__steps">
        <div class="contact-gr__steps-container">
          <div class="contact-gr__steps-progress" id="formProgress">
            <div class="contact-gr__steps-bar" id="formProgressBar"></div>
          </div>
          <div class="contact-gr__steps-labels">
            <div class="contact-gr__step-label active" data-step="1">{{ section.settings.step_1_label }}</div>
            {%- if section.settings.step_2_label != blank -%}
              <div class="contact-gr__step-label" data-step="2">{{ section.settings.step_2_label }}</div>
            {%- endif -%}
            {%- if section.settings.step_3_label != blank -%}
              <div class="contact-gr__step-label" data-step="3">{{ section.settings.step_3_label }}</div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h2 class="title title-wrapper--no-top-margin inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- else -%}
      <h2 class="visually-hidden">Formulario de contacto</h2>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="contact-gr__description rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.description }}
      </div>
    {%- endif -%}

    {%- liquid
      assign contact_form_class = 'isolate'
      if settings.animations_reveal_on_scroll
        assign contact_form_class = 'isolate scroll-trigger animate--slide-in'
      endif
    -%}

    {%- form 'contact', id: 'ContactFormGr', class: contact_form_class -%}
      {%- if form.posted_successfully? -%}
        <div class="contact-gr__success {% if section.settings.success_animation %}contact-gr__success--animated{% endif %}">
          <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
            {%- if section.settings.custom_success_icon -%}
              <img
                src="{{ section.settings.custom_success_icon | img_url: '50x' }}"
                alt=""
                class="contact-gr__success-icon"
              >
            {%- else -%}
              <svg
                class="contact-gr__success-icon"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d="M22 11.08V12C21.9988 14.1564 21.3005 16.2547 20.0093 17.9818C18.7182 19.709 16.9033 20.9725 14.8354 21.5839C12.7674 22.1953 10.5573 22.1219 8.53447 21.3746C6.51168 20.6273 4.78465 19.2461 3.61096 17.4371C2.43727 15.628 1.87979 13.4881 2.02168 11.3363C2.16356 9.18455 2.99721 7.13631 4.39828 5.49706C5.79935 3.85781 7.69279 2.71537 9.79619 2.24013C11.8996 1.7649 14.1003 1.98232 16.07 2.85999" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M22 4L12 14.01L9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {%- endif -%}
            {{
              section.settings.success_message
              | default: 'Gracias por contactarnos. Nos pondremos en contacto contigo lo antes posible.'
            }}
          </h2>
        </div>
      {%- elsif form.errors -%}
        <div class="form__message">
          <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
            <svg
              class="contact-gr__error-icon"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 8V12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="12" cy="16" r="0.5" stroke="currentColor" stroke-width="2"/>
            </svg>
            {{ section.settings.error_heading | default: 'Ha habido un problema con tu envío' }}
          </h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
            <a href="#ContactFormGr-email" class="link">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </a>
          </li>
        </ul>
      {%- endif -%}

      <div class="contact-gr__form-container">
        {%- if section.settings.show_form_steps -%}
          <div class="contact-gr__step-content active" data-step-content="1">
        {%- endif -%}

        <div class="contact-gr__fields">
          {%- if section.settings.show_name -%}
            <div class="field{% if section.settings.name_required %} field--required{% endif %} {% if section.settings.enable_floating_labels %}field--floating{% endif %}">
              <input
                class="field__input"
                autocomplete="name"
                type="text"
                id="ContactFormGr-name"
                name="contact[{{ section.settings.name_label | default: 'Nombre' }}]"
                value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                placeholder="{{ section.settings.name_placeholder | default: 'Tu nombre' }}"
                {% if section.settings.name_required %}
                  required
                {% endif %}
              >
              <label class="field__label" for="ContactFormGr-name">
                {{ section.settings.name_label | default: 'Nombre' }}
                {%- if section.settings.name_required -%}
                  <span aria-hidden="true">*</span>
                {%- endif -%}
              </label>
              {%- if section.settings.show_help_text and section.settings.name_help_text != blank -%}
                <div class="field__help-text">{{ section.settings.name_help_text }}</div>
              {%- endif -%}
            </div>
          {%- endif -%}

          <div class="field field--with-error field--required {% if section.settings.enable_floating_labels %}field--floating{% endif %}">
            <input
              autocomplete="email"
              type="email"
              id="ContactFormGr-email"
              class="field__input"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactFormGr-email-error"
              {% endif %}
              placeholder="{{ section.settings.email_placeholder | default: 'Tu correo electrónico' }}"
              required
            >
            <label class="field__label" for="ContactFormGr-email">
              {{- section.settings.email_label | default: 'Correo electrónico' }}
              <span aria-hidden="true">*</span></label
            >
            {%- if section.settings.show_help_text and section.settings.email_help_text != blank -%}
              <div class="field__help-text">{{ section.settings.email_help_text }}</div>
            {%- endif -%}
            {%- if form.errors contains 'email' -%}
              <small class="contact__field-error" id="ContactFormGr-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">
                  <span class="svg-wrapper">
                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M6 11C8.76142 11 11 8.76142 11 6C11 3.23858 8.76142 1 6 1C3.23858 1 1 3.23858 1 6C1 8.76142 3.23858 11 6 11Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M6 4V6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      <circle cx="6" cy="8" r="0.25" stroke="currentColor" stroke-width="1.5"/>
                    </svg>
                  </span>
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </span>
              </small>
            {%- endif -%}
          </div>

          {%- if section.settings.show_phone -%}
            <div class="field{% if section.settings.phone_required %} field--required{% endif %} {% if section.settings.enable_floating_labels %}field--floating{% endif %}">
              <input
                type="tel"
                id="ContactFormGr-phone"
                class="field__input"
                autocomplete="tel"
                name="contact[{{ section.settings.phone_label | default: 'Teléfono' }}]"
                pattern="[0-9\-\+\s$$$$]*"
                value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                placeholder="{{ section.settings.phone_placeholder | default: 'Tu número de teléfono' }}"
                {% if section.settings.phone_required %}
                  required
                {% endif %}
              >
              <label class="field__label" for="ContactFormGr-phone">
                {{ section.settings.phone_label | default: 'Teléfono' }}
                {%- if section.settings.phone_required -%}
                  <span aria-hidden="true">*</span>
                {%- endif -%}
              </label>
              {%- if section.settings.show_help_text and section.settings.phone_help_text != blank -%}
                <div class="field__help-text">{{ section.settings.phone_help_text }}</div>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- if section.settings.show_subject -%}
            <div class="field{% if section.settings.subject_required %} field--required{% endif %} {% if section.settings.enable_floating_labels %}field--floating{% endif %}">
              <input
                type="text"
                id="ContactFormGr-subject"
                class="field__input"
                name="contact[{{ section.settings.subject_label | default: 'Asunto' }}]"
                value="{{ form.subject }}"
                placeholder="{{ section.settings.subject_placeholder | default: '¿De qué se trata?' }}"
                {% if section.settings.subject_required %}
                  required
                {% endif %}
              >
              <label class="field__label" for="ContactFormGr-subject">
                {{ section.settings.subject_label | default: 'Asunto' }}
                {%- if section.settings.subject_required -%}
                  <span aria-hidden="true">*</span>
                {%- endif -%}
              </label>
              {%- if section.settings.show_help_text and section.settings.subject_help_text != blank -%}
                <div class="field__help-text">{{ section.settings.subject_help_text }}</div>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- if section.settings.show_company -%}
            <div class="field{% if section.settings.company_required %} field--required{% endif %} {% if section.settings.enable_floating_labels %}field--floating{% endif %}">
              <input
                type="text"
                id="ContactFormGr-company"
                class="field__input"
                name="contact[{{ section.settings.company_label | default: 'Empresa' }}]"
                value="{{ form.company }}"
                placeholder="{{ section.settings.company_placeholder | default: 'Nombre de tu empresa' }}"
                {% if section.settings.company_required %}
                  required
                {% endif %}
              >
              <label class="field__label" for="ContactFormGr-company">
                {{ section.settings.company_label | default: 'Empresa' }}
                {%- if section.settings.company_required -%}
                  <span aria-hidden="true">*</span>
                {%- endif -%}
              </label>
              {%- if section.settings.show_help_text and section.settings.company_help_text != blank -%}
                <div class="field__help-text">{{ section.settings.company_help_text }}</div>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>

        {%- if section.settings.show_form_steps and section.settings.step_2_label != blank -%}
          </div>
          <div class="contact-gr__step-content" data-step-content="2">
        {%- endif -%}

        {%- assign block_count = 0 -%}
        {%- for block in section.blocks -%}
          {%- assign block_count = block_count | plus: 1 -%}
          {%- if section.settings.show_form_steps and section.settings.step_3_label != blank -%}
            {%- assign fields_in_step_2_plus_1 = section.settings.fields_in_step_2 | plus: 1 -%}
            {%- if block_count == fields_in_step_2_plus_1 -%}
              </div>
              <div class="contact-gr__step-content" data-step-content="3">
            {%- endif -%}
          {%- endif -%}

          {%- case block.type -%}
            {%- when 'text_field' -%}
              <div
                class="field{% if block.settings.required %} field--required{% endif %} {% if section.settings.enable_floating_labels %}field--floating{% endif %}"
                {{ block.shopify_attributes }}
              >
                <input
                  type="text"
                  id="ContactFormGr-{{ block.id }}"
                  class="field__input"
                  name="contact[{{ block.settings.label }}]"
                  placeholder="{{ block.settings.placeholder }}"
                  {% if block.settings.required %}
                    required
                  {% endif %}
                >
                <label class="field__label" for="ContactFormGr-{{ block.id }}">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
                    <span aria-hidden="true">*</span>
                  {%- endif -%}
                </label>
                {%- if block.settings.help_text != blank and section.settings.show_help_text -%}
                  <div class="field__help-text">{{ block.settings.help_text }}</div>
                {%- endif -%}
              </div>

            {%- when 'email_field' -%}
              <div
                class="field{% if block.settings.required %} field--required{% endif %} {% if section.settings.enable_floating_labels %}field--floating{% endif %}"
                {{ block.shopify_attributes }}
              >
                <input
                  type="email"
                  id="ContactFormGr-{{ block.id }}"
                  class="field__input"
                  name="contact[{{ block.settings.label }}]"
                  placeholder="{{ block.settings.placeholder }}"
                  {% if block.settings.required %}
                    required
                  {% endif %}
                >
                <label class="field__label" for="ContactFormGr-{{ block.id }}">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
                    <span aria-hidden="true">*</span>
                  {%- endif -%}
                </label>
                {%- if block.settings.help_text != blank and section.settings.show_help_text -%}
                  <div class="field__help-text">{{ block.settings.help_text }}</div>
                {%- endif -%}
              </div>

            {%- when 'number_field' -%}
              <div
                class="field{% if block.settings.required %} field--required{% endif %} {% if section.settings.enable_floating_labels %}field--floating{% endif %}"
                {{ block.shopify_attributes }}
              >
                <input
                  type="number"
                  id="ContactFormGr-{{ block.id }}"
                  class="field__input"
                  name="contact[{{ block.settings.label }}]"
                  placeholder="{{ block.settings.placeholder }}"
                  {% if block.settings.min != blank %}
                    min="{{ block.settings.min }}"
                  {% endif %}
                  {% if block.settings.max != blank %}
                    max="{{ block.settings.max }}"
                  {% endif %}
                  {% if block.settings.step != blank %}
                    step="{{ block.settings.step }}"
                  {% endif %}
                  {% if block.settings.required %}
                    required
                  {% endif %}
                >
                <label class="field__label" for="ContactFormGr-{{ block.id }}">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
                    <span aria-hidden="true">*</span>
                  {%- endif -%}
                </label>
                {%- if block.settings.help_text != blank and section.settings.show_help_text -%}
                  <div class="field__help-text">{{ block.settings.help_text }}</div>
                {%- endif -%}
              </div>

            {%- when 'date_field' -%}
              <div
                class="field{% if block.settings.required %} field--required{% endif %}"
                {{ block.shopify_attributes }}
              >
                <label class="field__label" for="ContactFormGr-{{ block.id }}">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
                    <span aria-hidden="true">*</span>
                  {%- endif -%}
                </label>
                <input
                  type="date"
                  id="ContactFormGr-{{ block.id }}"
                  class="field__input field__input--date"
                  name="contact[{{ block.settings.label }}]"
                  {% if block.settings.min_date != blank %}
                    min="{{ block.settings.min_date }}"
                  {% endif %}
                  {% if block.settings.max_date != blank %}
                    max="{{ block.settings.max_date }}"
                  {% endif %}
                  {% if block.settings.required %}
                    required
                  {% endif %}
                >
                {%- if block.settings.help_text != blank and section.settings.show_help_text -%}
                  <div class="field__help-text">{{ block.settings.help_text }}</div>
                {%- endif -%}
              </div>

            {%- when 'dropdown' -%}
              <div
                class="field field--with-dropdown{% if block.settings.required %} field--required{% endif %}"
                {{ block.shopify_attributes }}
              >
                <label class="field__label" for="ContactFormGr-{{ block.id }}">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
                    <span aria-hidden="true">*</span>
                  {%- endif -%}
                </label>
                <div class="field__select-wrapper">
                  <select
                    id="ContactFormGr-{{ block.id }}"
                    class="field__input select"
                    name="contact[{{ block.settings.label }}]"
                    {% if block.settings.required %}
                      required
                    {% endif %}
                  >
                    <option value="" disabled selected>{{ block.settings.placeholder }}</option>
                    {%- assign options = block.settings.options | split: '\n' -%}
                    {%- for option in options -%}
                      <option value="{{ option | strip }}">{{ option | strip }}</option>
                    {%- endfor -%}
                  </select>
                  <div class="field__select-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </div>
                </div>
                {%- if block.settings.help_text != blank and section.settings.show_help_text -%}
                  <div class="field__help-text">{{ block.settings.help_text }}</div>
                {%- endif -%}
              </div>

            {%- when 'checkbox' -%}
              <div
                class="field field--checkbox{% if block.settings.required %} field--required{% endif %}"
                {{ block.shopify_attributes }}
              >
                <input
                  type="checkbox"
                  id="ContactFormGr-{{ block.id }}"
                  name="contact[{{ block.settings.label }}]"
                  value="Sí"
                  class="field__checkbox"
                  {% if block.settings.required %}
                    required
                  {% endif %}
                >
                <label class="field__label field__label--checkbox" for="ContactFormGr-{{ block.id }}">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
                    <span aria-hidden="true">*</span>
                  {%- endif -%}
                </label>
                {%- if block.settings.help_text != blank and section.settings.show_help_text -%}
                  <div class="field__help-text">{{ block.settings.help_text }}</div>
                {%- endif -%}
              </div>

            {%- when 'radio' -%}
              <fieldset
                class="field field--radio-group{% if block.settings.required %} field--required{% endif %}"
                {{ block.shopify_attributes }}
              >
                <legend class="field__label">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
                    <span aria-hidden="true">*</span>
                  {%- endif -%}
                </legend>
                <div class="field__radio-wrapper">
                  {%- assign options = block.settings.options | split: '\n' -%}
                  {%- for option in options -%}
                    <div class="field__radio-item">
                      <input
                        type="radio"
                        id="ContactFormGr-{{ block.id }}-{{ forloop.index }}"
                        name="contact[{{ block.settings.label }}]"
                        value="{{ option | strip }}"
                        class="field__radio"
                        {% if forloop.first and block.settings.required %}
                          required
                        {% endif %}
                      >
                      <label
                        class="field__label field__label--radio"
                        for="ContactFormGr-{{ block.id }}-{{ forloop.index }}"
                      >
                        {{ option | strip }}
                      </label>
                    </div>
                  {%- endfor -%}
                </div>
                {%- if block.settings.help_text != blank and section.settings.show_help_text -%}
                  <div class="field__help-text">{{ block.settings.help_text }}</div>
                {%- endif -%}
              </fieldset>

            {%- when 'textarea' -%}
              <div
                class="field{% if block.settings.required %} field--required{% endif %} {% if section.settings.enable_floating_labels %}field--floating{% endif %}"
                {{ block.shopify_attributes }}
              >
                <textarea
                  rows="{{ block.settings.rows }}"
                  id="ContactFormGr-{{ block.id }}"
                  class="text-area field__input"
                  name="contact[{{ block.settings.label }}]"
                  placeholder="{{ block.settings.placeholder }}"
                  {% if block.settings.required %}
                    required
                  {% endif %}
                ></textarea>
                <label class="form__label field__label" for="ContactFormGr-{{ block.id }}">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
                    <span aria-hidden="true">*</span>
                  {%- endif -%}
                </label>
                {%- if block.settings.help_text != blank and section.settings.show_help_text -%}
                  <div class="field__help-text">{{ block.settings.help_text }}</div>
                {%- endif -%}
              </div>

            {%- when 'rating' -%}
              <div
                class="field field--rating{% if block.settings.required %} field--required{% endif %}"
                {{ block.shopify_attributes }}
              >
                <label class="field__label">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
                    <span aria-hidden="true">*</span>
                  {%- endif -%}
                </label>
                <div class="field__rating-stars" data-max="{{ block.settings.max_rating }}">
                  <input
                    type="hidden"
                    name="contact[{{ block.settings.label }}]"
                    id="ContactFormGr-{{ block.id }}-value"
                    value=""
                    {% if block.settings.required %}
                      required
                    {% endif %}
                  >
                  <div class="field__rating-container">
                    {%- for i in (1..block.settings.max_rating) -%}
                      <span class="field__rating-star" data-value="{{ i }}">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </span>
                    {%- endfor -%}
                  </div>
                </div>
                {%- if block.settings.help_text != blank and section.settings.show_help_text -%}
                  <div class="field__help-text">{{ block.settings.help_text }}</div>
                {%- endif -%}
              </div>

            {%- when 'file_upload' -%}
              <div
                class="field field--file{% if block.settings.required %} field--required{% endif %}"
                {{ block.shopify_attributes }}
              >
                <label class="field__label" for="ContactFormGr-{{ block.id }}">
                  {{ block.settings.label }}
                  {%- if block.settings.required -%}
