{%- if section.settings.show_form_steps
  or section.settings.enable_animation
  or section.blocks contains 'rating'
  or section.blocks contains 'file_upload'
-%}
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    // Inicialización de pasos del formulario
    {% if section.settings.show_form_steps %}
    const form = document.getElementById('ContactFormGr');
    const stepContents = document.querySelectorAll('.contact-gr__step-content');
    const stepLabels = document.querySelectorAll('.contact-gr__step-label');
    const progressBar = document.getElementById('formProgressBar');
    const prevButton = document.querySelector('.contact-gr__prev-button');
    const nextButton = document.querySelector('.contact-gr__next-button');
    const submitButton = document.querySelector('.contact-gr__submit-button');
    let currentStep = 1;
    const totalSteps = stepContents.length;

    function updateStep(step) {
      // Ocultar todos los contenidos de pasos
      stepContents.forEach(content => {
        content.classList.remove('active');
      });
      
      // Mostrar el contenido del paso actual
      document.querySelector(`[data-step-content="${step}"]`).classList.add('active');
      
      // Actualizar etiquetas de pasos
      stepLabels.forEach(label => {
        const labelStep = parseInt(label.dataset.step);
        label.classList.remove('active', 'completed');
        if (labelStep === step) {
          label.classList.add('active');
        } else if (labelStep < step) {
          label.classList.add('completed');
        }
      });
      
      // Actualizar barra de progreso
      if (progressBar) {
        const progress = ((step - 1) / (totalSteps - 1)) * 100;
        progressBar.style.width = `${progress}%`;
      }
      
      // Actualizar botones
      if (step === 1) {
        prevButton.style.display = 'none';
      } else {
        prevButton.style.display = 'flex';
      }
      
      if (step === totalSteps) {
        nextButton.style.display = 'none';
        submitButton.style.display = 'flex';
      } else {
        nextButton.style.display = 'flex';
        submitButton.style.display = 'none';
      }
      
      currentStep = step;
    }

    // Evento para botón anterior
    prevButton.addEventListener('click', function() {
      if (currentStep > 1) {
        updateStep(currentStep - 1);
      }
    });

    // Evento para botón siguiente
    nextButton.addEventListener('click', function() {
      // Validar campos en el paso actual
      const currentContent = document.querySelector(`[data-step-content="${currentStep}"]`);
      const requiredFields = currentContent.querySelectorAll('[required]');
      let isValid = true;
      
      requiredFields.forEach(field => {
        if (!field.checkValidity()) {
          isValid = false;
          field.reportValidity();
        }
      });
      
      if (isValid && currentStep < totalSteps) {
        updateStep(currentStep + 1);
      }
    });
    {% endif %}

    // Inicialización de campos de valoración por estrellas
    const ratingFields = document.querySelectorAll('.field--rating');
    ratingFields.forEach(field => {
      const stars = field.querySelectorAll('.field__rating-star');
      const hiddenInput = field.querySelector('input[type="hidden"]');
      
      stars.forEach(star => {
        star.addEventListener('click', function() {
          const value = this.dataset.value;
          hiddenInput.value = value;
          
          // Actualizar visualización
          stars.forEach(s => {
            const starValue = parseInt(s.dataset.value);
            s.classList.toggle('active', starValue <= value);
          });
        });
        
        star.addEventListener('mouseover', function() {
          const value = this.dataset.value;
          
          stars.forEach(s => {
            const starValue = parseInt(s.dataset.value);
            s.classList.toggle('hover', starValue <= value);
          });
        });
        
        star.addEventListener('mouseout', function() {
          stars.forEach(s => {
            s.classList.remove('hover');
          });
        });
      });
    });

    // Inicialización de campos de carga de archivos
    const fileFields = document.querySelectorAll('.field--file');
    fileFields.forEach(field => {
      const fileInput = field.querySelector('input[type="file"]');
      const fileSelected = field.querySelector('.field__file-selected');
      const fileButton = field.querySelector('.field__file-button');
      
      fileButton.addEventListener('click', function() {
        fileInput.click();
      });
      
      fileInput.addEventListener('change', function() {
        if (this.files.length > 0) {
          fileSelected.textContent = this.files[0].name;
          fileSelected.style.display = 'block';
        } else {
          fileSelected.textContent = '';
          fileSelected.style.display = 'none';
        }
      });
    });

    // Inicialización de etiquetas flotantes
    {% if section.settings.enable_floating_labels %}
    const floatingFields = document.querySelectorAll('.field--floating');
    floatingFields.forEach(field => {
      const input = field.querySelector('.field__input');
      
      // Verificar si el campo ya tiene valor al cargar
      if (input.value) {
        field.classList.add('field--filled');
      }
      
      input.addEventListener('focus', function() {
        field.classList.add('field--focused');
      });
      
      input.addEventListener('blur', function() {
        field.classList.remove('field--focused');
        field.classList.toggle('field--filled', this.value !== '');
      });
    });
    {% endif %}
  });
  </script>
{%- endif -%}

